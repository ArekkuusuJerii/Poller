        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #262626;">
            <ImageView fitHeight="106.0" fitWidth="134.0" layoutX="35.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../img/poller.png" />
            <effect>
               <InnerShadow />
            </effect>
            </ImageView>
        </Pane>
        <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #262626;" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <ImageView fitHeight="115.0" fitWidth="106.0" layoutX="35.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../img/answer.png" />
            <effect>
               <InnerShadow />
            </effect>
            </ImageView>
        </Pane>
        <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #262626;" GridPane.rowIndex="2">
            <ImageView fitHeight="106.0" fitWidth="106.0" layoutX="35.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../img/statistic.png" />
            <effect>
               <InnerShadow />
            </effect>
            </ImageView>
        </Pane>
        <Pane prefHeight="200.0" prefWidth="205.0" style="-fx-border-color: white;" GridPane.columnIndex="1">
            <Label layoutX="64.0" layoutY="14.0" text="CUENTA">
                <font>
                    <Font name="Consolas" size="14.0" />
                </font>
            </Label>
            <Label fx:id="lb_user" alignment="CENTER" layoutX="9.0" layoutY="42.0" prefHeight="25.0" prefWidth="158.0" style="-fx-background-color: black;" textAlignment="CENTER" />
            <Button layoutX="33.0" layoutY="85.0" mnemonicParsing="false" onMouseReleased="#logout" style="-fx-text-fill: red;" text="Cerrar Sesión">
                <font>
                    <Font name="Consolas Bold" size="13.0" />
                </font>
            </Button>
        </Pane>
        <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: white;" GridPane.rowIndex="1">
            <Button contentDisplay="CENTER" layoutX="61.0" layoutY="85.0" mnemonicParsing="false" onMouseReleased="#handleOpenEvent" text="Abrir" textOverrun="CLIP">
                <font>
                    <Font name="Consolas" size="13.0" />
                </font>
            </Button>
         <Label layoutX="18.0" layoutY="14.0" text="Responder encuesta">
            <font>
               <Font name="Consolas" size="14.0" />
            </font>
         </Label>
         <LimitedTextField fx:id="tf_token" alignment="CENTER" layoutX="13.0" layoutY="42.0" maxLength="8" promptText="Ingresar token" style="-fx-background-color: black;" />
        </Pane>
        <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: white;" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <Button contentDisplay="CENTER" layoutX="27.0" layoutY="34.0" mnemonicParsing="false" onMouseReleased="#handleVisualizeEvent" prefHeight="27.0" prefWidth="122.0" text="Estadísticas" textOverrun="CLIP">
                <font>
                    <Font name="Consolas" size="13.0" />
                </font>
            </Button>
         <Button contentDisplay="CENTER" layoutX="27.0" layoutY="72.0" mnemonicParsing="false" onMouseReleased="#handleCreateEvent" prefHeight="27.0" prefWidth="122.0" text="Nueva encuesta" textOverrun="CLIP">
            <font>
               <Font name="Consolas" size="13.0" />
            </font>
         </Button>
        </Pane>
    </GridPane>
